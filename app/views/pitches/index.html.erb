<div class = "container-fluid">
  <h1>Final Project Pitches</h1>
  <% if @round && !voted?(@round) %>
  	Round <%= @round.round_number %>: <%= link_to "Vote for a pitch", new_round_vote_path(:round_id => @round.id) %>
  <% elsif !admin? %>
  	  <button type="button" class="btn btn-default">
        <%= link_to "New Pitch", new_pitch_path %>
      </button>
  <% end %>
      <br><br>
  <% if logged_in? && admin? %>
    <ul class="list-inline">
    	<li><%= button_to 'Open round 1', open_round_1_path, method: :post, class: "btn btn-default" %></li>
    	<li><%= button_to 'Open round 2', open_round_2_path, method: :post, class: "btn btn-default" %></li>
    	<li><%= button_to 'Close all rounds', close_round_path, method: :post, class: "btn btn-default" %></li>
    </ul>
  <% end %>

  <ul class="list-group">
    <% @pitches.each do |pitch| %>
      <li class="list-group-item">
        <strong><%= pitch.title %></strong> 
        <p><%= pitch.description %></p>
        <i>Pitched by <%= pitch.student.name %></i>
      </li>
      <br>
    <% end %>
  </ul>
</div>



