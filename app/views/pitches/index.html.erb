<h1>Final Project Pitches</h1>
<% if @round.round_number == 1 %>
	<%= link_to "Vote for a pitch", new_round_vote_path(:round_id => @round.id) %>
<% elsif @round.round_number == 2 %>
	<%= link_to "Vote for a pitch", new_round_vote_path(:round_id => @round.id) %>
<% else %>
	<%= link_to "New Pitch", new_pitch_path %>
<% end %>

<ul>
  <% @pitches.each do |p| %>
    <li><p><%= p.title %></p><%= link_to "Description", pitch_path(p) %></li>
  <% end %>
</ul>




