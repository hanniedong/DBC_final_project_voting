<div class = "container-fluid">
  <h1>Create the teams</h1>

  <% @pitches.each do |pitch| %>
    <strong> <%= pitch.title %></strong>
      <%= form_for :teams do |f| %>
        <% @users.each do |user| %>
          <%= f.check_box user.id %>
          <%= user.name %><br>
        <% end %>
        <%= f.hidden_field :pitch_id, :value => pitch.id %>
          <%= f.submit %>
      <% end %>
  <% end %>

</div>