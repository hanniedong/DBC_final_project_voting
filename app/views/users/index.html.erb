<div class = "container-fluid">
  <h1> Pitches </h1>

  <button type="button" class="btn btn-default">
    <%= link_to "Create New Round", create_round_path %>
  </button>
  <button type="button" class="btn btn-default">
    <%= link_to "Create Teams", new_team_path %>
  </button>
  <% if @round == nil  %>
    <button type="button" class="btn btn-default">
      <%= link_to 'Open Round', open_round_path, method: :post %>
    </button>
  <% else %>
    <button type="button" class="btn btn-default">
      <%= link_to 'Close Round', close_round_path, method: :post %>
    </button>
    <i> Round <%= @round.id %> Voting is open </i><br>
  <% end %>
  <br><br>

  <ul class="list-group">
    <% @pitches.each do |pitch| %>
      <li class="list-group-item">
        <strong>Title:</strong>
          <p> <%= pitch.title %> </p>
        <strong> Description: </strong> 
          <p><%= pitch.description %></p>
        <strong> Votes: </strong> 
          <p><%= pitch.votes.count %></p>
        <strong> Voters:</strong>
        <p>
          <% pitch.voters.each do |voter| %>
            <%= voter.name %> |
          <% end %>
        </p>
    <% end %>
  </dl>

</div>